<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:baselineAligned="false"
    android:background="@drawable/fundo7"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="447dp"
            android:layout_weight="1.86">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_nome"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/abc_action_bar_overflow_padding_end_material"
                android:gravity="center"
                android:text="Nome Empresa" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_endereco"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_margin="@dimen/abc_action_bar_overflow_padding_end_material"
                android:layout_gravity="left"
                android:text="Endereço: " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_bairro"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_margin="@dimen/abc_action_bar_overflow_padding_end_material"
                android:text="Bairro: "
                android:layout_gravity="left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_telefone"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_gravity="left"
                android:layout_margin="@dimen/abc_action_bar_overflow_padding_end_material"
                android:text="Telefone: " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_atendimento_seg_sex"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_margin="@dimen/abc_action_bar_overflow_padding_end_material"
                android:layout_gravity="left"
                android:text="Segunda - Sexta: " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_atendimento_sab"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_margin="@dimen/abc_action_bar_overflow_padding_end_material"
                android:layout_gravity="left"
                android:text="Sabado: " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_atendimento_dom"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_gravity="left"
                android:layout_margin="@dimen/abc_action_bar_overflow_padding_end_material"
                android:text="Domingo: " />

        </LinearLayout>
    </ScrollView>

    <!-- Porção de Interface da Activity -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="7dp" />
</LinearLayout>